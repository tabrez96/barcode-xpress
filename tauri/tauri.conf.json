{
	"$schema": "https://beta.tauri.app/schema.json",
	"productName": "Barcode Xpress",
	"version": "0.1.0",
	"identifier": "com.barcodexpress.app",
	"build": {
		"beforeDevCommand": "python main.py",
		"beforeBuildCommand": "",
		"devUrl": "http://localhost:8080",
		"frontendDist": "../templates"
	},
	"app": {
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"resizable": true,
				"title": "Barcode Xpress",
				"width": 800,
				"center": true
			}
		]
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/icon.ico", "icons/32x32.png", "icons/128x128.png"]
	}
}
